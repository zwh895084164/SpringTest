<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           ">
    <!--集合类型属性注入-->
    <bean id="student" class="com.wz.collection.Student">
        <property name="courses" >
            <array>
                <value>jave课程</value>
                <value>英语课程</value>
            </array>
        </property>
        <property name="list">
            <list>
                <value>张三</value>
                <value>小张</value>
            </list>
        </property>
        <property name="maps">
            <map>
                <entry key="JAVA" value="jave"></entry>
                <entry key="ENGLISH" value="English"></entry>
            </map>
        </property>
        <property name="set">
            <set>
                <value>MySQL</value>
                <value>Spring</value>
            </set>
        </property>
        <!--注入List属性，但是值是对象-->
        <property name="courseList">
            <list>
                <ref bean="course1"></ref>
                <ref bean="course2"></ref>
                <ref bean="course3"></ref>
            </list>
        </property>
    </bean>

    <!--创建多个course对象-->
    <bean id="course1" class="com.wz.collection.Course">
        <property name="name" value="英语"/>
    </bean>
    <bean id="course2" class="com.wz.collection.Course">
        <property name="name" value="语文"/>
    </bean>
    <bean id="course3" class="com.wz.collection.Course">
        <property name="name" value="数学"/>
    </bean>
</beans>